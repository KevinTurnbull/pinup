<%= form_for event, html: { multipart: true } do |f| %>
  <div class="row">
    <% if current_user.nil? || !current_user.admin? %>
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
        <%= display_error_for(event, :title) %>
      </div>
    </div>
    <% else %>
    <div class="col-md-2">
      <div class="form-group">
        <%= f.label :id %>
        <%= f.text_field :id, class: 'form-control disabled', disabled: true %>
        <%= display_error_for(event, :id) %>
      </div>
    </div>
    <div class="col-md-10">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
        <%= display_error_for(event, :title) %>
      </div>
    </div>
    <% end %>
  </div>

  <% if current_user.nil? || !current_user.admin? %>
  <% else %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :recurring %>
        <%= f.text_field :recurring, class: 'form-control disabled', disabled: true, value: event.recurring? %>
        <%= display_error_for(event, :recurring) %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 16, class: 'form-control' %>
        <%= display_error_for(event, :description) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :venue_id %>
        <%= f.text_field :venue_id, class: 'form-control' %>
        <%= display_error_for(event, :venue_id) %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :artist_id %>
        <%= f.text_field :artist_id, class: 'form-control' %>
        <%= display_error_for(event, :artist_id) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :event_type_id %>
        <%= f.select :event_type_id, types.map {|t| [t, t]}, {}, { class: 'form-control' } %>
        <%= display_error_for(event, :event_type_id) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :start_time %>
        <%= f.text_field :start_time, class: 'datetimepicker form-control',
            value: event.start_time.nil? ? Time.now.strftime('%H:%M %d-%m-%Y') : event.start_time.strftime('%H:%M %d-%m-%Y'),
            data: { "date-format" => 'YYYY-MM-DD HH:MM' } %>
        <%= display_error_for(event, :start_time) %>
      </div>
    </div>
  
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :price %>
        <div class="input-group">
          <span class="input-group-addon">$</span>
          <%= f.text_field :price, class: 'form-control' %>
          <span class="input-group-addon">.00</span>
        </div>
        <%= display_error_for(event, :price) %>
      </div>
    </div>
  </div>

  <div class="row">
    <% if current_user.nil? || !current_user.admin? %>
    <div class="col-md-4 col-md-offset-4">
      <div class="form-group">
        <%= f.submit 'Submit', class: 'btn btn-primary form-control' %>
      </div>
    </div>
    <% else %>
    <div class="col-md-4 col-md-offset-1">
      <div class="form-group">
        <%= f.submit 'Submit', class: 'btn btn-primary form-control' %>
      </div>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <div class="form-group">
        <%= link_to 'Delete', "/admin/events/#{event.id}", method: :delete, class: 'btn btn-danger form-control' %>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
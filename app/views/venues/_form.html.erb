<%= form_for(venue) do |f| %>
  
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_area :title, rows: 6, class: 'form-control' %>
        <%= display_error_for venue, :title %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :street_address %>
        <%= f.check_box :authorized, value: true %>
        <%= display_error_for venue, :street_address %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :street_address %>
        <%= f.text_field :street_address, class: 'form-control' %>
        <%= display_error_for venue, :street_address %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label 'City' %>
        <%= f.text_field :locality, class: 'form-control' %>
        <%= display_error_for venue, :locality %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label 'Province' %>
        <%= f.text_field :region, class: 'form-control' %>
        <%= display_error_for venue, :region %>
      </div>
    </div>
  </div>  

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :postal_code %>
        <%= f.text_field :postal_code, class: 'form-control' %>
        <%= display_error_for venue, :postal_code %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-control' %>
        <%= display_error_for venue, :url %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
        <%= display_error_for venue, :description %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
        <%= display_error_for venue, :email %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :telephone %>
        <%= f.text_field :telephone, class: 'form-control' %>
        <%= display_error_for venue, :telephone %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :latitude %>
        <%= f.text_field :latitude, class: 'form-control' %>
        <%= display_error_for venue, :latitude %>
      </div>
    </div>
  </div>  

   <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :longitude %>
        <%= f.text_field :longitude, class: 'form-control' %>
        <%= display_error_for venue, :longitude %>
      </div>
    </div>
  </div>  

  <div class="row">
    <% if current_user.nil? || !current_user.admin? %>
    <div class="col-md-4 col-md-offset-4">
      <div class="form-group">
        <%= f.submit 'Submit', class: 'btn btn-primary form-control' %>
      </div>
    </div>
    <% else %>
    <div class="col-md-4 col-md-offset-1">
      <div class="form-group">
        <%= f.submit 'Submit', class: 'btn btn-primary form-control' %>
      </div>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <div class="form-group">
        <%= link_to 'Delete', "/admin/venues/#{venue.id}", method: :delete, class: 'btn btn-danger form-control' %>
      </div>
    </div>
    <% end %>
  </div>
<% end %>

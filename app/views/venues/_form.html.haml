= form_for(venue) do |f|
  .row
    .col-md-12
      .form-group
        = f.label :title
        = f.text_field :title, class: 'form-control'
        = display_error_for venue, :title
  .row
    .col-md-12
      .form-group
        = f.label :authorized
        = f.check_box :authorized, class: 'form-control'
        = display_error_for venue, :authorized
  .row
    .col-md-12
      .form-group
        = f.label :street_address
        = f.text_field :street_address, class: 'form-control'
        = display_error_for venue, :street_address
  .row
    .col-md-12
      .form-group
        = f.label 'City'
        = f.text_field :locality, class: 'form-control'
        = display_error_for venue, :locality
  .row
    .col-md-12
      .form-group
        = f.label 'Province'
        = f.text_field :region, class: 'form-control'
        = display_error_for venue, :region
  .row
    .col-md-12
      .form-group
        = f.label :postal_code
        = f.text_field :postal_code, class: 'form-control'
        = display_error_for venue, :postal_code
  .row
    .col-md-12
      .form-group
        = f.label :url
        = f.text_field :url, class: 'form-control'
        = display_error_for venue, :url
  .row
    .col-md-12
      .form-group
        = f.label :description
        = f.text_field :description, class: 'form-control'
        = display_error_for venue, :description
  .row
    .col-md-12
      .form-group
        = f.label :email
        = f.text_field :email, class: 'form-control'
        = display_error_for venue, :email
  .row
    .col-md-12
      .form-group
        = f.label :telephone
        = f.text_field :telephone, class: 'form-control'
        = display_error_for venue, :telephone
  .row
    .col-md-12
      .form-group
        = f.label :latitude
        = f.text_field :latitude, class: 'form-control'
        = display_error_for venue, :latitude
  .row
    .col-md-12
      .form-group
        = f.label :longitude
        = f.text_field :longitude, class: 'form-control'
        = display_error_for venue, :longitude
  .row
    - if current_user.nil? || !current_user.admin?
      .col-md-4.col-md-offset-4
        .form-group
          = f.submit 'Submit', class: 'btn btn-primary form-control'
    - else
      .col-md-4.col-md-offset-1
        .form-group
          = f.submit 'Submit', class: 'btn btn-primary form-control'
      .col-md-2
      .col-md-4
        .form-group
          = link_to 'Delete', "/admin/venues/#{venue.id}", method: :delete, class: 'btn btn-danger form-control'

%h1 Listing Ads
%table
  %thead
    %tr
      %th{:colspan => "3"}
  %tbody
    - ads.each do |ad|
      %tr
        %td= link_to 'Show', admin_ad_path(ad)
        %td= link_to 'Edit', edit_admin_ad_path(ad)
        %td= link_to 'Destroy', admin_ad_path(ad), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Ad', new_admin_ad_path

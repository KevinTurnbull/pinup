= form_for ad, html: { multipart: true } do |f|
  .row
    .col-md-12
      .form-group
        = f.label :url
        = f.text_field :url, class: 'form-control'
        = display_error_for ad, :url
      .form-group
        = f.label :image
        Â 
        %p.label.label-primary 240x400
        .input-group
          = link_to 'Browse...', '#', id: 'image-upload-btn', class: 'input-group-addon btn btn-default'
          %span#image-upload-label.form-control
          = f.file_field :image, id: 'image-upload', style: 'display: none;'
        = display_error_for ad, :image
  .row
    .col-md-4.col-md-offset-4
      .form-group
        = f.submit 'Upload Ad Image', id: 'ad-upload-btn', class: 'btn btn-primary form-control'

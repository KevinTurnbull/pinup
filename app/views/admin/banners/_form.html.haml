        %p.label.label-primary 468x60
        .input-group
          = link_to 'Browse...', '#', id: 'ban-upload-btn', class: 'input-group-addon btn btn-default'
          %span#ban-upload-label.form-control
          = f.file_field :image, id: 'ban-upload', style: 'display: none;'
        = display_error_for banner, :image
  .row

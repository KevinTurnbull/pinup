= form_for csv_calendar, html: { multipart: true } do |f|
  .row
    .col-md-12
      .form-group
        - f.label :file
        %p
          %span.label.label-primary Date
          %span.label.label-primary Name
          %span.label.label-primary Time
          %span.label.label-primary Price
          %span.label.label-primary Description
          %span.label.label-primary Referrer URL
          %span.label.label-primary Referrer
        .input-group
          = link_to 'Browse...', '#', id: 'file-upload-btn', class: 'input-group-addon btn btn-default'
          %span#file-upload-label.form-control
          = f.file_field :file, id: 'file-upload', style: 'display: none;'
        = display_error_for csv_calendar, :file
  .row
    .col-md-4.col-md-offset-4
      .form-group
        = f.submit 'Upload CSV File', id: 'cal-upload-btn', class: 'btn btn-primary form-control'
